{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "jsx": "preserve",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "paths": {
			"@/*": [
				"./*"
			]
		},
        "types": [
            "node",
            "vitest/globals"
        ],
        "lib": [
            "esnext",
            "dom",
            "dom.iterable",
        ],
        "declaration": true,
        "outDir": "./dist",
    },

    "exclude": [
        "**/dist/**",
        "**/node_modules/**"
    ]
}
